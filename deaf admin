--Admin Commands thanks chat gpt

local commands = {
    kick = function(player, target)
        target:Kick("You have been kicked by an admin.")
    end,
    ban = function(player, target)
        target:Kick("You have been banned by an admin.")
    end,
    teleport = function(player, target)
        player.Character:SetPrimaryPartCFrame(target.Character:GetPrimaryPartCFrame())
    end,
    commands = function(player)
        local gui = Instance.new("ScreenGui")
        gui.Name = "AdminCommands"
        gui.Parent = player.PlayerGui
        local frame = Instance.new("Frame")
        frame.Size = UDim2.new(0, 200, 0, 150)
        frame.BackgroundColor3 = Color3.new(1, 1, 1)
        frame.Position = UDim2.new(0.5, -100, 0.5, -75)
        frame.Parent = gui
        local layout = Instance.new("UIListLayout")
        layout.Padding = UDim.new(0, 5)
        layout.Parent = frame
        for command, func in pairs(commands) do
            local button = Instance.new("TextButton")
            button.Parent = frame
            button.Text = command
            button.Size = UDim2.new(1, 0, 0, 25)
            button.BackgroundColor3 = Color3.new(0.5, 0.5, 0.5)
            button.BorderSizePixel = 0
            button.Font = Enum.Font.SourceSans
            button.TextColor3 = Color3.new(1, 1, 1)
            button.TextScaled = true
            button.MouseButton1Click:Connect(function()
                func(player)
            end)
        end
    end,
}

-- Connect the "player.Chatted" event to a function that handles admin commands
game.Players.PlayerAdded:Connect(function(player)
    player.Chatted:Connect(function(message)
        local prefix = ":"
        if message:sub(1, #prefix) == prefix then
            local args = {}
            for arg in message:sub(#prefix + 1):gmatch("%S+") do
                table.insert(args, arg:lower())
            end
            local command = table.remove(args, 1)
            if commands[command] then
                commands[command](player, game.Players[args[1]])
            end
        end
    end)
end)
